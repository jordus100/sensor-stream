<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flow_maxElementsWrap="1"
    app:flow_wrapMode="none"
    app:layout_wrapBehaviorInParent="skipped">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/streamModeCheckBox"
            android:layout_width="328dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/data_sending_mode" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="309dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Status : Not Connected" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="315dp"
                android:layout_height="0dp"
                android:layout_gravity="center|top"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Accelerometer"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/accelX"
                android:layout_width="119dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="X:" />

            <TextView
                android:id="@+id/accelY"
                android:layout_width="118dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Y:" />

            <TextView
                android:id="@+id/accelZ"
                android:layout_width="117dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Z:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="272dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Gyroscope"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gyroX"
                android:layout_width="117dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="X:" />

            <TextView
                android:id="@+id/gyroY"
                android:layout_width="117dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Y:" />

            <TextView
                android:id="@+id/gyroZ"
                android:layout_width="117dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Z:" />

        </LinearLayout>

        <Button
            android:id="@+id/startButton"
            android:layout_width="244dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onStartBtnClicked"
            android:text="START"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/transmissionStatusText"
            android:layout_width="309dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Transmission not active" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>